@model Wedding

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Add New Wedding </title>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-7">
                <h2 class="text-center"> Plan Your Wedding </h2>
                <br><hr>
                <form asp-action="AddNew" asp-controller="Home" method="POST">
                    <div class="form-group row">
                        <label for="Wedder1" class="col-sm-3"> Wedder One </label>
                        <input name="Wedder1" class="col-sm-7 form-control">
                        <span class="col-sm-12 text-danger text-center" asp-validation-for="Wedder1"></span>
                    </div>
                    <div class="form-group row">
                        <label for="Wedder2" class="col-sm-3"> Wedder Two </label>
                        <input name="Wedder2" class="col-sm-7 form-control">
                        <span class="col-sm-12 text-danger text-center" asp-validation-for="Wedder2"></span>
                    </div>
                    <div class="form-group row">
                        <label for="Date" class="col-sm-3"> Date </label>
                        <input name="Date" type="date" class="col-sm-7 form-control">
                        <span class="col-sm-12 text-danger text-center" asp-validation-for="Date"></span>
                    </div>
                    <div class="form-group row">
                        <label for="Address" class="col-sm-3"> Address </label>
                        <input name="Address" class="col-sm-7 form-control" placeholder="Street, City, State, Zip">
                        <span class="col-sm-12 text-danger text-center" asp-validation-for="Address"></span>
                    </div>
                    <br>
                    <button class="btn btn-success col-sm-4 offset-3"> You May Now Plan! </button>
                </form>
            </div>
            <div class="col-sm-5">
                <div class="row">
                    <a href="/dashboard" class="col-sm-2"> Dashboard </a>
                    <a href="/logout" class="col-sm-2 offset-1"> Logout </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>